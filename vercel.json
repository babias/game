{
    "version": 2,
    "builds": [
      { "src": "client/**", "use": "@vercel/static" },
      { "src": "server/index.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "server/index.js" },
      { "src": "/(.*)", "dest": "client/$1" }
    ],
    "env": {
      "PORT": "5000"
    }
  }